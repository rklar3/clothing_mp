<div class="columns">
  <div class="column is-8 is-centered">

    <!-- Multipart is for other datatypes like images -->
    <%= simple_form_for @product, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

        <div class="columns">

          <!-- Title  -->
          <div class="field column is-9">
            <div class="control">
              <%= f.input :title , required: true, input_html: { class:"input"}, wrapper: false, label_html: { class:"label" }%>
            </div>
          </div>

          <!-- Price  -->
          <div class="field column">
            <div class="control">
              <%= f.input :price, required: true, input_html: { class:"input", maxlength: 7  }, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>
        </div>

        <!-- Description  -->
        <div class="field">
          <div class="control">
            <%= f.input :description, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <!-- Brand  -->
        <div class="columns">
          <div class="field column is-5">
            <div class="control">
              <label class="label">Brand</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :brand, collection: Product::BRAND, prompt: "Select brand" %>
                </span>
              </div>
            </div>
           </div>
        
        <!-- Type of product  -->
        <div class="field column is-5">
          <div class="control">
            <label class="label">Type</label>
            <div class="control has-icons-left">
              <span class="select">
                <%= f.input_field :item_type, collection: Product::TYPE, prompt: "Select type" %>
              </span>
            </div>
          </div>
          </div>

        <!-- Size  -->
          <div class="field column is-5">
            <div class="control">
              <label class="label">Size</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :size, collection: Product::SIZE, prompt: "Select size" %>
                </span>
              </div>
            </div>
           </div>
        </div>

        <!-- Gender  -->
        <div class="columns">
           <div class="field column is-5">
            <div class="control">
              <label class="label">Gender</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :gender, collection: Product::GENDER, prompt: "Select Gender" %>
                </span>
              </div>
            </div>
           </div>
          
          <!-- Color  -->
           <div class="field column is-5">
            <div class="control">
              <label class="label">Color</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :color, collection: Product::COLOR, prompt: "Select Color" %>
                </span>
              </div>
            </div>
           </div>
           
          <!-- Condidtion  -->
          <div class="field column is-5">
            <div class="control">
              <label class="label">Condition</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :condition, collection: Product::CONDITION, prompt: "Select condition" %>
                </span>
              </div>
            </div>
           </div>
         </div>

        <div class="field">
          <div class="control">
            <label class="label">Add images</label>
              <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class:"file-input product-image" }, label: false, wrapper: false %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-upload"></i></span>
                    <span class="file-label">Choose a fileâ€¦</span>
                  </span>
              </label>
              </div>
            </div>
          </div>
          <output id="list"></output>
        <hr />

        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, class: 'button is-dark' %>
            <%= link_to 'Cancel', products_path, class:'button is-light' %>
          </div>
        </div>
      <% end %>
  </div>
</div>
